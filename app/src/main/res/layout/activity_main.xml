<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@android:color/white"
            android:background="?attr/selectableItemBackground"
            android:onClick="goToHome" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students"
            android:textColor="@android:color/white"
            android:background="?attr/selectableItemBackground"
            android:onClick="goToStudents" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@android:color/white"
            android:background="?attr/selectableItemBackground"
            android:onClick="goToAdmin" />
    </LinearLayout>

    <!-- RESULTS Label -->
    <TextView
        android:id="@+id/tvResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULTS"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@drawable/bg_result_label"
        app:layout_constraintTop_toBottomOf="@id/navBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <!-- CardView 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvResults"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card2"
        android:background="#D4E4F1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Note 1"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <!-- CardView 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvResults"
        app:layout_constraintStart_toEndOf="@id/card1"
        android:background="#FFD700">

        <TextView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Note 2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <!-- Add more cards using same style for uniform design -->

</androidx.constraintlayout.widget.ConstraintLayout>
